<log4net>
  <!--appenders-->
  <appender name="Log" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString"  value="c:\Logs\messaging.distributor.log" />
    <appendToFile value="true" />
    <maximumFileSize value="1MB" />
    <maxSizeRollBackups value="1000" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
      <levelMax value="FATAL" />
    </filter>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%newline### [%level] ###%newlineDate/Time:  %date%newlineLogger:     %logger%newlineMessage:    %message%newlineThread:     %thread%newlineException:  " />
    </layout>
  </appender>

  <!--loggers-->
  <root>
    <level value="INFO" />
    <appender-ref ref="Log" />
  </root>
</log4net>
